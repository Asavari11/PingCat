# Backend environment for Express API

# Port the backend server listens on
PORT=5000

# MongoDB connection string
# Local example: mongodb://localhost:27017/pingcat
# Atlas example (replace user, password, host, and db):
MONGO_URI=mongodb+srv://<user>:<password>@<cluster-host>/<db>?retryWrites=true&w=majority&appName=PingCatcluster

# Secret used for signing tokens and secure operations
JWT_SECRET=replace_with_long_random_string

# Frontend URL used in flows that need absolute links (e.g., email links)
FRONTEND_URL=http://localhost:8080

# Optional email settings for forgot-password flow (if enabled)
# EMAIL_USER=yourgmail@gmail.com
# EMAIL_PASS=your_gmail_app_password
